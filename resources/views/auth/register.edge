<body>
    <div class="form-signin w-100 m-auto text-center d-flex justify-content-center mt-5">
        <form action="{{ route('AuthController.register')}}" class="col-lg-4" method="POST">
            <h1 class="h3 mb-3 fw-normal">Please Register</h1>
            <div class="form-floating">
                <input type="text" class="form-control" id="username" name="username" required autocomplete="off"><br>
                <label for="username">Username</label>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control" id="email" name="email" required autocomplete="off"><br>
                <label for="email">Email</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" required autocomplete="off"><br>
                <label for="password">Password</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" required autocomplete="off"><br>
                <label for="password_confirmation">Confirm Password</label>
            </div>
            <button type="submit" class="btn btn-success btn-lg w-100">Register</button>
        </form>
    </div>

    @if (session.has('successMessage'))
        <p style="color: green;">{{ session.flash('successMessage') }}</p>
    @endif

    @if (session.has('errorMessages'))
        <ul style="color: red;">
            @foreach (session.flash('errorMessages') as error)
                <li>{{ error }}</li>
            @endforeach
        </ul>
    @endif
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
